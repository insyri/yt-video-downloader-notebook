      "cell_type": "code",
      "source": [
        "import ipywidgets as widgets\n",
        "from IPython.display import display\n",
        "\n",
        "# URL input box\n",
        "url_input = widgets.Text(\n",
        "    description=\"Video URL:\",\n",
        "    placeholder=\"Paste YouTube URL here\",\n",
        "    layout=widgets.Layout(width='600px')\n",
        ")\n",
        "\n",
        "# Format selector\n",
        "format_selector = widgets.Dropdown(\n",
        "    options=[\n",
        "        (\"MP4 Video (best quality)\", \"video\"),\n",
        "        (\"MP3 Audio only\", \"audio\")\n",
        "    ],\n",
        "    value=\"video\",\n",
        "    description=\"Format:\"\n",
        ")\n",
        "\n",
        "# Download button\n",
        "download_button = widgets.Button(\n",
        "    description=\"Download\",\n",
        "    button_style='success'\n",
        ")\n",
        "\n",
        "# Toggle debug output button\n",
        "toggle_debug_button = widgets.ToggleButton(\n",
        "    value=False,\n",
        "    description='Show yt-dlp Output',\n",
        "    button_style='',\n",
        "    tooltip='Toggle detailed yt-dlp logs'\n",
        ")\n",
        "\n",
        "# Progress bar\n",
        "progress_bar = widgets.IntProgress(\n",
        "    value=0,\n",
        "    min=0,\n",
        "    max=100,\n",
        "    description='Progress:',\n",
        "    bar_style=''\n",
        ")\n",
        "\n",
        "# Output areas\n",
        "output_area = widgets.Output()\n",
        "debug_output_area = widgets.Output(layout={'border': '1px solid #ccc'})\n",
        "debug_output_area.layout.display = 'none'  # hidden by default\n",
        "\n",
        "\n",
        "def toggle_debug(change):\n",
        "    if change['new']:\n",
        "        debug_output_area.layout.display = 'block'\n",
        "    else:\n",
        "        debug_output_area.layout.display = 'none'\n",
        "\n",
        "\n",
        "toggle_debug_button.observe(toggle_debug, names='value')\n",
        "\n",
        "print(\"UI setup complete. 2 of 3 cells ran.\")"
      ],
      "metadata": {
        "id": "7THCavyC78WJ"
      },
      "execution_count": null,
      "outputs": []
