    {
      "cell_type": "code",
      "source": [
        "import os\n",
        "import yt_dlp\n",
        "import subprocess\n",
        "import glob\n",
        "from google.colab import files\n",
        "\n",
        "check_where = \"Go to the bar on the left and click the files icon. \" \\\n",
        "  \"If you see stuff like `bin`, `boot`, `etc`, click the \" \\\n",
        "  \"`content` folder, and your downloads should be there.\"\n",
        "\n",
        "def clean_previous_files():\n",
        "    for file in os.listdir():\n",
        "        if file.startswith(\"output.\"):\n",
        "            os.remove(file)\n",
        "\n",
        "\n",
        "def download_video(b):\n",
        "    url = url_input.value.strip()\n",
        "    mode = format_selector.value\n",
        "    output_area.clear_output()\n",
        "\n",
        "    if not url:\n",
        "        with output_area:\n",
        "            print(\"Please enter a URL.\")\n",
        "        return\n",
        "\n",
        "    clean_previous_files()\n",
        "    progress_bar.value = 0\n",
        "    progress_bar.bar_style = ''\n",
        "\n",
        "    with output_area:\n",
        "        print(\"Downloading... please wait.\")\n",
        "\n",
        "    def progress_hook(d):\n",
        "        if d['status'] == 'downloading':\n",
        "            if d.get('total_bytes'):\n",
        "                percent = int(d['downloaded_bytes'] / d['total_bytes'] * 100)\n",
        "                progress_bar.value = percent\n",
        "        elif d['status'] == 'finished':\n",
        "            progress_bar.value = 100\n",
        "\n",
        "    try:\n",
        "        # Fetch the title first so we can name the file correctly\n",
        "        with yt_dlp.YoutubeDL({'quiet': True}) as ydl_info:\n",
        "            info = ydl_info.extract_info(url, download=False)\n",
        "            raw_title = info.get('title', 'video')\n",
        "            # Sanitize title: replace characters not safe for filenames\n",
        "            safe_title = \"\".join(c if c.isalnum() or c in \" -_()\" else \"_\" for c in raw_title).strip()\n",
        "            safe_title = safe_title[:80]  # cap length\n",
        "\n",
        "        out_name = f\"output_{safe_title}\"\n",
        "\n",
        "        if mode == \"video\":\n",
        "          ydl_opts = {\n",
        "              'format': 'bestvideo[vcodec^=avc1]+bestaudio[acodec^=mp4a]/bestvideo[vcodec^=avc1]+bestaudio/bestvideo+bestaudio/best',\n",
        "              'outtmpl': f'/content/{out_name}.%(ext)s',\n",
        "              'progress_hooks': [progress_hook],\n",
        "              'keep_video': True,       # don't delete intermediate files\n",
        "              'nopostoverwrites': True,\n",
        "              'verbose': True,\n",
        "              'quiet': False,\n",
        "          }\n",
        "        else:\n",
        "            ydl_opts = {\n",
        "                'outtmpl': f'/content/{out_name}.%(ext)s',\n",
        "                'progress_hooks': [progress_hook],\n",
        "                'postprocessors': [{\n",
        "                    'key': 'FFmpegExtractAudio',\n",
        "                    'preferredcodec': 'mp3',\n",
        "                    'preferredquality': '320',\n",
        "                }],\n",
        "                'quiet': False\n",
        "            }\n",
        "\n",
        "        with debug_output_area:\n",
        "            with yt_dlp.YoutubeDL(ydl_opts) as ydl:\n",
        "                ydl.download([url])\n",
        "\n",
        "        # Find the separately downloaded video and audio files\n",
        "        video_file = next((f for f in glob.glob(f'/content/{out_name}.f*.mp4')), None)\n",
        "        audio_file = (\n",
        "            next((f for f in glob.glob(f'/content/{out_name}.f*.m4a')), None) or\n",
        "            next((f for f in glob.glob(f'/content/{out_name}.f*.webm')), None)\n",
        "        )\n",
        "        output_file = f'/content/{out_name}.mp4'\n",
        "        audio_output = f'/content/{out_name}.mp3'\n",
        "\n",
        "        if mode == \"video\":\n",
        "            if video_file and audio_file:\n",
        "                with output_area:\n",
        "                    print(\"Merging and converting... please wait.\")\n",
        "                subprocess.run([\n",
        "                    'ffmpeg', '-y',\n",
        "                    '-i', video_file,\n",
        "                    '-i', audio_file,\n",
        "                    '-c:v', 'libx264',\n",
        "                    '-preset', 'fast',\n",
        "                    '-crf', '23',\n",
        "                    '-c:a', 'aac',\n",
        "                    '-b:a', '192k',\n",
        "                    '-movflags', '+faststart',\n",
        "                    output_file\n",
        "                ], check=True)\n",
        "                os.remove(video_file)\n",
        "                os.remove(audio_file)\n",
        "\n",
        "            if os.path.exists(output_file):\n",
        "                with output_area:\n",
        "                    print(\"Download complete! If it seems that its \"\n",
        "                          \"downloading the wrong media and you have already \"\n",
        "                          \"checked the URL:\\n\" + check_where)\n",
        "                files.download(output_file)\n",
        "            else:\n",
        "                with output_area:\n",
        "                    print(\"!!!! Something went wrong... could not find the output file. \" + check_where)\n",
        "\n",
        "        else:  # audio mode\n",
        "            if os.path.exists(audio_output):\n",
        "                with output_area:\n",
        "                    print(\"Download complete!\")\n",
        "                files.download(audio_output)\n",
        "            else:\n",
        "                with output_area:\n",
        "                    print(\"!!!! Something went wrong... could not find the output file. \" + check_where)\n",
        "\n",
        "    except Exception as e:\n",
        "        progress_bar.bar_style = 'danger'\n",
        "        with output_area:\n",
        "            print(\"!!!! Download failed. !!!!\")\n",
        "            print(str(e))\n",
        "\n",
        "\n",
        "download_button.on_click(download_video)\n",
        "\n",
        "display(url_input,\n",
        "        format_selector,\n",
        "        download_button,\n",
        "        toggle_debug_button,\n",
        "        progress_bar,\n",
        "        output_area,\n",
        "        debug_output_area)"
      ],
